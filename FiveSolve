
//Абрамов 57Б.

import java.util.Scanner;
public class SolveFive {
    public  static void main(String[] args)
    {
        System.out.print("Введите  число x: ");

        double x,f;

        Scanner s = new Scanner(System.in);

        x=s.nextDouble();

        if(x<=2)
        {f = (Math.pow(x,2)+4*x+5);
            System.out.print("Функция f(x) равна: " + f);}

     else {System.out.print("Функция f(x) равна: " + 1/(Math.pow(x,2)+4*x+5));}

    }

}
